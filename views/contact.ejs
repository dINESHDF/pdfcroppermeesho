<%- include('header') %>

<main class="max-w-5xl mx-auto px-6 py-12">
  <section class="bg-white rounded-3xl shadow-2xl p-12">
    <h1 class="text-4xl font-bold gradient-text mb-6 text-center">
      Contact Us
    </h1>

    <form method="post" action="/contact" class="space-y-6 max-w-xl mx-auto">
      <input type="text" name="name" placeholder="Your Name"
        class="w-full border rounded-xl px-4 py-3" required />

      <input type="email" name="email" placeholder="Email Address"
        class="w-full border rounded-xl px-4 py-3" required />

      <textarea name="message" rows="5" placeholder="Your Message"
        class="w-full border rounded-xl px-4 py-3" required></textarea>

      <button type="submit"
        class="gradient-bg text-white w-full py-3 rounded-xl font-bold">
        Send Message
      </button>
    </form>

