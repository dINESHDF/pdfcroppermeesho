<%- include('header', { title: '404 - Page Not Found' }) %>

<main class="max-w-7xl mx-auto px-6 py-12 flex items-center justify-center min-h-[70vh]">
  <div class="text-center">
    <div class="mb-8">
      <i data-lucide="file-question" class="w-32 h-32 mx-auto text-purple-400"></i>
    </div>
    
    <h1 class="text-6xl font-bold gradient-text mb-4">404</h1>
    <h2 class="text-3xl font-bold text-gray-800 mb-4">Page Not Found</h2>
    <p class="text-xl text-gray-600 mb-8 max-w-md mx-auto">
      Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/" class="inline-flex items-center space-x-2 gradient-bg text-white px-8 py-4 rounded-full font-bold text-lg hover:shadow-xl transform hover:-translate-y-1 transition-all">
        <i data-lucide="home" class="w-5 h-5"></i>
        <span>Go Home</span>
      </a>
      
      <% if(user){ %>
      <a href="/dashboard" class="inline-flex items-center space-x-2 bg-white border-2 border-purple-600 text-purple-600 px-8 py-4 rounded-full font-bold text-lg hover:bg-purple-50 transition-all">
        <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
        <span>Dashboard</span>
      </a>
      <% } %>
    </div>
  </div>
</main>

<script>
  lucide.createIcons();
</script>

<%- include('footer') %>